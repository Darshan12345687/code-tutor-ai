{
	"info": {
		"_postman_id": "codetutor-api-collection",
		"name": "CodeTutor API",
		"description": "API collection for CodeTutor application",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000",
			"type": "string"
		},
		{
			"key": "token",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "GET Requests",
			"item": [
				{
					"name": "Get All Courses",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/courses",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"courses"
							]
						}
					},
					"response": []
				},
				{
					"name": "Get Course by ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/courses/:id",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"courses",
								":id"
							],
							"variable": [
								{
									"key": "id",
									"value": "YOUR_COURSE_ID_HERE"
								}
							]
						}
					},
					"response": []
				},
				{
					"name": "Get Current User",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/auth/me",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"me"
							]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "POST Requests",
			"item": [
				{
					"name": "User Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    pm.collectionVariables.set(\"token\", jsonData.token);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"john.doe@semo.edu\",\n  \"s0Key\": \"SO1234567\",\n  \"fullName\": \"John Doe\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/login",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"login"
							]
						}
					},
					"response": []
				},
				{
					"name": "Create Course",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"title\": \"Advanced JavaScript\",\n  \"description\": \"Master advanced JavaScript concepts\",\n  \"category\": \"Web Development\",\n  \"difficultyLevel\": \"intermediate\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/courses",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"courses"
							]
						}
					},
					"response": []
				},
				{
					"name": "Send Message",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"to\": \"USER_ID_HERE\",\n  \"message\": \"Hello, I need help with the Python course.\",\n  \"subject\": \"Question about Python Course\",\n  \"type\": \"question\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/messages",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"messages"
							]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "PUT Requests",
			"item": [
				{
					"name": "Update User Profile",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"fullName\": \"John Michael Doe\",\n  \"preferredLanguage\": \"en\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/users/:id",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"users",
								":id"
							],
							"variable": [
								{
									"key": "id",
									"value": "YOUR_USER_ID_HERE"
								}
							]
						}
					},
					"response": []
				},
				{
					"name": "Update Course",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"title\": \"Advanced JavaScript - Updated\",\n  \"description\": \"Master advanced JavaScript concepts with ES6+\",\n  \"difficultyLevel\": \"advanced\",\n  \"isPublished\": true\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/courses/:id",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"courses",
								":id"
							],
							"variable": [
								{
									"key": "id",
									"value": "YOUR_COURSE_ID_HERE"
								}
							]
						}
					},
					"response": []
				},
				{
					"name": "Mark Message as Read",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/messages/:id/read",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"messages",
								":id",
								"read"
							],
							"variable": [
								{
									"key": "id",
									"value": "YOUR_MESSAGE_ID_HERE"
								}
							]
						}
					},
					"response": []
				}
			]
		}
	]
}




